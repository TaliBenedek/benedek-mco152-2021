<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="benedek.scrabble.DictionaryController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
    <Label
            text="Specify the path for the file to be searched: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="0" />
    <TextField
            fx:id="filePathField"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0" />
    <Label
            text="Enter the word to be searched for: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="1" />
    <TextField fx:id="wordField"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1" />
    <Button
            fx:id="searchButton"
            onAction="#searchDictionary"
            prefWidth="55.0"
            text="Search"
            GridPane.rowIndex="3" />
    <Label
            fx:id="foundLabel"
            GridPane.rowIndex="4" />
</GridPane>
