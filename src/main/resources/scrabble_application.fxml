<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx/11.0.1"
          fx:controller="benedek.scrabble.ScrabbleController"
          stylesheets="@dictionary.css"
          alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"/>
    <Label
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"/>
    <Label
            GridPane.columnIndex="2"
            GridPane.rowIndex="0"/>
    <Label
            GridPane.columnIndex="3"
            GridPane.rowIndex="0"/>
    <Label
            GridPane.columnIndex="4"
            GridPane.rowIndex="0"/>
    <Label
            GridPane.columnIndex="5"
            GridPane.rowIndex="0"/>
    <Label
            GridPane.columnIndex="6"
            GridPane.rowIndex="0"/>

    <Button
            text="Submit"
            GridPane.columnIndex="4"
            GridPane.rowIndex="1"/>
    <Button
            text="Clear"
            GridPane.columnIndex="5"
            GridPane.rowIndex="1"/>
    <Button
            text="#Points"
            GridPane.columnIndex="6"
            GridPane.rowIndex="1"/>

    <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"/>
    <Label
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"/>
    <Label
            GridPane.columnIndex="2"
            GridPane.rowIndex="2"/>
    <Label
            GridPane.columnIndex="3"
            GridPane.rowIndex="2"/>
    <Label
            GridPane.columnIndex="4"
            GridPane.rowIndex="2"/>
    <Label
            GridPane.columnIndex="5"
            GridPane.rowIndex="2"/>
    <Label
            GridPane.columnIndex="6"
            GridPane.rowIndex="2"/>
</GridPane>
